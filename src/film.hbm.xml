<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name = "com.debanshu777.model.FilmPOJO" table ="film">
 
      <meta attribute = "class-description">
         This class contains the film detail. 
      </meta>
 
      <id name = "film_id" type = "short" column = "film_id">
         <generator class="native"/>
      </id>
 
      <property name = "title" column = "title" type = "string"/>
      <property name = "description" column = "description" type = "string"/>
      <property name = "release_year" column = "release_year" type = "string"/>
      <property name = "language_id" column = "language_id" type = "int"/>
      <property name = "rating" column = "rating" type = "string"/>
      <property name = "secial_features" column = "special_features" type = "string"/>
      <property name = "director_name" column = "director" type = "string"/>
      <property name = "is_disabled" column = "is_disabled" type = "int"/>
   </class>
</hibernate-mapping>